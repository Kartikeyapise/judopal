{
  "name": "contribution-mvp-backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.json",
    "watch": "TSC_WATCHFILE=UseFsEventsWithFallbackDynamicPolling tsc -p tsconfig.json -w",
    "build-watch": "tsc -p tsconfig.json -w",
    "lint:ts": "./node_modules/.bin/tslint -c tslint.json -p tsconfig.json",
    "lint": "./node_modules/.bin/eslint \"src/**/*.{js,ts}\" --quiet",
    "pretty": "prettier --print-width 160 --write \"**/*.ts\"",
    "lint-staged": "lint-staged",
    "start": "node dist/src/server.js",
    "start:debug": "nest start --debug --watch",
    "shoot": "export USER='postgres' && npm run build && node dist/src/server.js",
    "start:prod": "node dist/main"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm run build",
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.0.0",
    "@nestjs/mongoose": "^10.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "@types/bluebird-global": "^3.5.13",
    "axios": "^1.3.4",
    "bluebird": "^3.7.2",
    "camelcase": "^5.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "dotenv": "^16.0.2",
    "elliptic": "^6.5.4",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-react": "^7.31.6",
    "eth-sig-util": "^3.0.1",
    "ethereumjs-util": "^7.1.5",
    "ethers": "^6.2.3",
    "jsonwebtoken": "^9.0.0",
    "lint-staged": "^13.0.3",
    "lodash": "^4.17.21",
    "mongoose": "^7.3.1",
    "newrelic": "^9.15.0",
    "pg": "^8.8.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "tslint-config-prettier": "^1.18.0",
    "typeorm": "^0.3.9"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "28.1.8",
    "@types/node": "^18.16.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "28.1.3",
    "prettier": "^2.7.1",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "28.0.8",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.0",
    "typescript": "^5.0.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daolens/contribution-forum-backend.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/daolens/contribution-forum-backend/issues"
  },
  "homepage": "https://github.com/daolens/contribution-forum-backend#readme",
  "directories": {
    "test": "test"
  },
  "description": "",
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --print-width 160 --write",
      "git add"
    ]
  },
  "engines": {
    "npm": ">=8.0.0 <9.0.0",
    "node": "v16.17.0"
  }
}
